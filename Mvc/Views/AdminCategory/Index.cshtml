@using EntityLayer.Concrete
@model List<Category>


@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <td>ID</td>
        <td>Kategori Adı</td>
        <td>Durum</td>
        <td>Sil</td>
        <td>Güncelle</td>
        <td>Başlıklar</td>

    </tr>
    @foreach (var cate in Model)
    {
<tr>
    <td>@cate.CategoryId</td>
    <td>@cate.CategoryName</td>
    <td>@cate.Status</td>
    <td><a href="#" class="btn btn-danger">Sil</a></td>
    <td><a href="#" class="btn btn-warning">Güncelle</a></td>
    <td><a href="#" class="btn btn-primary">Başlıklar</a></td>
</tr>
    }
</table>
<br />
<a href="/Category/AddCategory" class="btn btn-primary">Yeni Kategori</a>